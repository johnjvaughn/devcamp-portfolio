<% if logged_in?(:site_admin) %>
    <%= link_to fa_icon('file-text'), toggle_status_blog_path(blog), alt: "Toggle Draft/Published",
                                      style: blog_status_color(blog) %>
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog), alt: "Edit" %>
    <%= link_to fa_icon('trash-o'), blog, method: :delete, alt: "Delete", data: { confirm: 'Are you sure?' } %>
<% end %>
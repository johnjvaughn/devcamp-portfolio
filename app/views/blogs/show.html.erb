<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>

<nav class="breadcrumb">
  <%= link_to "Home", root_path, class: "breadcrumb-item" %>
  <%= link_to "Blog", blogs_path, class: "breadcrumb-item" %>
  <%= link_to @blog.topic.title, topic_path(@blog.topic_id), class: "breadcrumb-item" %>
  <span class="breadcrumb-item active"><%= @blog.title %></span>
  <span class="pull-right blogcrumb"><%= render 'admin_actions', blog: @blog %></span>
</nav>

  <div class="row">
    <div class="col-sm-6">
      <span class="blog-show-heading">Topic:</span> <%= topic_title_helper(@blog) %>
    </div>
  </div>
  <p></p>
  <div class="blog-show-heading">Content:</div>
  <div class="card"><%= markdown(@blog.body) %></div>
  <p></p>
  
  <%= render 'comments/comment_form' %>
  
  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>
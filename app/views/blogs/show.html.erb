<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>

<nav class="breadcrumb">
  <%= link_to "Home", root_path, class: "breadcrumb-item" %>
  <%= link_to "Blog", blogs_path, class: "breadcrumb-item" %>
  <%= link_to @blog.topic.title, topic_path(@blog.topic_id), class: "breadcrumb-item" %>
  <span class="breadcrumb-item active"><%= @blog.title %></span>
  <% if logged_in?(:site_admin) %>
    <span class="pull-right">
      <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) %>
      <%= link_to fa_icon('trash-o'), @blog, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  <% end %>
</nav>

  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>
  
  <div class="row">
    <div class="col-sm-6">
      <span class="blog-show-heading">Topic:</span> <%= topic_title_helper(@blog) %>
    </div>
    <div class="col-sm-6">
      <span class="blog-show-heading">Status:</span> <%= @blog.status %>
    </div>
  </div>
  <p></p>
  <div class="blog-show-heading">Content:</div>
  <div class="card"><%= markdown(@blog.body) %></div>
  <p></p>
  
  <%= render 'comments/comment_form' %>
  
  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>